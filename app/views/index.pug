doctype
html
    head
        title Base Converter
        link(rel="stylesheet" href="./css/main.css")
    body
        ul
            li
                input#from-number(type="text" maxlength="60")
                select#from-base
                    - for (var i = 2; i <= 16; i++)
                        option(value=i)=i
            li
                input#to-number(type="text" disabled)
                select#to-base
                    - for (var i = 2; i <= 16; i++)
                        option(value=i)=i
        script.
            require("./js/Converter");
            require("./js/Events");